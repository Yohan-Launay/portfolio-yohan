import reactLogo from "../../assets/img/logo-skills/react-logo.png";
import wordpressLogo from "../../assets/img/logo-skills/wordpress-logo.png";
import parcelJSLogo from "../../assets/img/logo-skills/parceljs-logo.png";
import gitLogo from "../../assets/img/logo-skills/git-logo.png";
import notionLogo from "../../assets/img/logo-skills/notion-logo.png";
