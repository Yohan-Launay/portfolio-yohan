            </div>
            <div>
                <Image src={bootstrapLogo} alt="Bootstrap" />
                <p>Bootstrap</p>
            </div>
            <div>
                <Image src={tailwindLogo} alt="Tailwind"/>
                <p>Tailwind</p>
            </div>
        </div>
        <div>
            <h3>Front-end</h3>
            <div>
                <Image src={sassLogo} alt="Sass"/>
                <p>Sass</p>
            </div>
            <div>
                <Image src={reactLogo} alt="React"/>
                <p>React</p>
            </div>
            <div>
                <Image src={wordpressLogo} alt="Wordpress"/>
                <p>Wordpress</p>
            </div>
            <div>
                <Image src={parcelJSLogo} alt="ParcelJS"/>
                <p>ParcelJS</p>
            </div>
        </div>
        <div>
            <h3>Autres</h3>
            <div>
                <Image src={gitLogo} alt="Git"/>
                <p>Git</p>
            </div>
            <div>
                <Image src={notionLogo} alt="Notion"/>
                <p>Notion</p>
            </div>
            <div>
                <Image src={jiraLogo} alt="Jira"/>
                <p>Jira</p>
            </div>
            <div>
                <Image src={dockerLogo} alt="Jira"/>
                <p>Docker</p>
            </div>
        </div>
        <div>
            <h3>Back-end</h3>
            <div>
                <Image src={javaLogo} alt="Java"/>
                <p>Java</p>
            </div>
            <div>
                <Image src={symfonyLogo} alt="Symfony"/>
                <p>Symfony</p>
            </div>
            <div>
                <Image src={nodeJSLogo} alt="NodeJS"/>
                <p>NodeJS</p>
            </div>
            <div>
                <Image src={mariaDBLogo} alt="MariaDB"/>
