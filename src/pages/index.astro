<style>
	#skills-project {
		margin-top: 100px;
		display: flex;
	}
	.skills-div {
		width: 90vw;
	}
	h2 {
		font-size: 30px;
		text-align: center;
		padding: 20px 0;
	}
	.card {
		border-radius: 16px;
		border: 1px solid var(--text-beige);
		background: var(--blue-pale);
		width: 330px;
		margin: 10px;
		padding: 10px 20px;
	}
	.project {
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		align-items: center;
		width: 100%;
	}

	.all-category {
		display: flex;
		flex-wrap: wrap;
	}
	nav {
		width: 450px;
		border-radius: 10px;
		border: 1px solid rgba(255, 255, 255, 0.66);
		background: rgba(255, 255, 255, 0.43);
		backdrop-filter: blur(10.600000381469727px);
		position: fixed;
		top: 25px;
		left: 200px;
		z-index: 10;
	}
	.ul-nav {
		padding: 0;
		margin: 0;
		width: 100%;
		height: 41px;
		display: flex;
		justify-content: space-around;
		align-items: center;
	}

	@media (max-width: 760px) {
		section {
			margin: 0 20px;
			color: var(--text-beige);
		}

		nav {
			width: 100%;
			border-radius: 10px;
			border: 1px solid rgba(255, 255, 255, 0.66);
			background: rgba(255, 255, 255, 0.43);
			backdrop-filter: blur(10.600000381469727px);
			position: fixed;
			top: 0;
			left: 0;
			z-index: 10;
		}

		#skills-project {
			display: flex;
			flex-direction: column;
			margin-top: 50px;
		}
	}
</style>
